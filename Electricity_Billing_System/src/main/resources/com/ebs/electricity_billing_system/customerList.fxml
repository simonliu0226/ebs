<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ebs.electricity_billing_system.CustomerListController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="125.0" prefWidth="900.0" style="-fx-background-color: #77acd1;" text="Customer List">
         <font>
            <Font name="Cambria Bold" size="32.0" />
         </font>
      </Label>
      <TableView fx:id="customer_table" layoutY="125.0" prefHeight="400.0" prefWidth="900.0">
        <columns>
          <TableColumn fx:id="name_column" editable="false" prefWidth="128.571428" text="Customer Name" />
          <TableColumn fx:id="meter_number_column" prefWidth="128.571428" text="Meter Number" />
            <TableColumn fx:id="address_column" prefWidth="128.571428" text="Address" />
            <TableColumn fx:id="city_column" prefWidth="128.571428" text="City" />
            <TableColumn fx:id="state_column" prefWidth="128.571428" text="State" />
            <TableColumn fx:id="email_column" prefWidth="128.571428" text="Email" />
            <TableColumn fx:id="phone_column" prefWidth="128.571428" text="Phone Number" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" layoutY="525.0" prefHeight="75.0" prefWidth="900.0">
         <children>
            <Button fx:id="search_button" mnemonicParsing="false" prefHeight="50.0" prefWidth="162.0" style="-fx-background-radius: 30px; -fx-background-color: #77acd1;" text="Search">
               <font>
                  <Font size="26.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" right="15.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="add_button" mnemonicParsing="false" prefHeight="50.0" prefWidth="162.0" style="-fx-background-radius: 30px; -fx-background-color: #77acd1;" text="Add">
               <font>
                  <Font size="26.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" right="15.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="back_button" mnemonicParsing="false" prefHeight="50.0" prefWidth="162.0" style="-fx-background-radius: 30px; -fx-background-color: #77acd1;" text="Back">
               <font>
                  <Font size="26.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" right="15.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
